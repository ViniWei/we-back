container_commands:
  01_backup_package:
    command: "cp package.json package-old.json"
  03_clear_npm_cache:
    command: "npm cache clean --force"
  04_remove_node_modules:
    command: "rm -rf node_modules"
  05_install_fresh:
    command: "npm install --production --no-optional"
  06_verify_no_prestart:
    command: "npm run 2>&1 | grep -v prestart || echo 'No prestart found - OK'"